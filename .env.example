# Rust Backend Config
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Next.js Server Port
PORT=3001

# The URL the Rust server proxies to for frontend logic
SERVER_PROXY_URL=http://localhost:3001

# CalDAV Authentication & URL
CALDAV_URL=https://your-caldav-server.example.com
CALDAV_USERNAME=username
CALDAV_PASSWORD=secret_password

# ICS Storage Configuration
# Strategies: 'memory-only', 'disk-only', 'memory-and-disk'
STORAGE_STRATEGY=memory-and-disk

# Path to the ICS file if utilizing disk storage
STORAGE_DISK_PATH=./data/caldav-sync-cache.ics

# Automatic Synchronization
# Background sync interval in minutes. If empty or 0, auto-sync is disabled.
AUTO_SYNC_INTERVAL_MINUTES=60
